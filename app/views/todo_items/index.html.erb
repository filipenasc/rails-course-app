<h1> <%= @todo_list.title %> </h1>

<table class="todo_items">
	<% @todo_list.todo_items.each do |todo_item| %>
		<tr id="<%= dom_id(todo_item) %>">
			<td><%= todo_item.content %></td>
			<td><%= link_to "Edit", edit_todo_list_todo_item_path(todo_item) %></td>
			<!-- If i had not the method called "url_options" in my controller, the link should be written as follows"
			link_to "Edit", edit_todo_list_todo_item_path(@todo_list, todo_item) -->
			<td><%= link_to "Delete", todo_list_todo_item_path(todo_item), method: :delete, data: { confirm: "Are you sure?" } %></td>
		</tr>
	<% end %>	
</table>

<p> <%= link_to "New Todo Item", new_todo_list_todo_item_path %> </p>